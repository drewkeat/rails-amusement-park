<h1> New User </h1>

<%= form_for @user, class: "new_user" do |f|%>
    <div class="form-group">
        <%= f.label :name%>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :height%>
        <%= f.text_field :height, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :happiness%>
        <%= f.text_field :happiness, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :nausea%>
        <%= f.text_field :nausea, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :tickets%>
        <%= f.text_field :tickets, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :admin, "Check box if you are a theme park owner" %>
        <%= f.check_box :admin %>
    </div>
    <div class="form-group">
        <%= f.label :password%>
        <%= f.text_field :password, class: "form-control" %>
    </div>
    <div class="actions">
        <%= f.submit "Create User", :class => "btn btn-primary" %>
    </div>
<% end %>