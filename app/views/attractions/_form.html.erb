<%= form_with model: @attraction do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :min_height, "Minimum Height" %>
        <%= f.text_field :min_height, class: "form-control", placeholder: "Enter in Inches" %>
    </div>
    <div class="form-group">
        <%= f.label :happiness_rating, "Happiness Rating" %>
        <%= f.text_field :happiness_rating, class: "form-control", placeholder: "1-5" %>
    </div>
    <div class="form-group">
        <%= f.label :nausea_rating, "Nausea Rating" %>
        <%= f.text_field :nausea_rating, class: "form-control", placeholder: "1-5" %>
    </div>
    <div class="form-group">
        <%= f.label :tickets %>
        <%= f.text_field :tickets, class: "form-control", placeholder: "1-5" %>
    </div>
    <div>
        <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>