<h1> <%= @attraction.name %> </h1>

<div class="center">
    <div class="info align-items-center">
        <p>Name: <%= @attraction.name %></p>
        <p>Tickets: <%= @attraction.tickets %></p>
        <p>Height: <%= @attraction.min_height %></p>
        <% if current_user.admin %>
            <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
        <% end %>
            <%= button_to "Go on this ride", rides_path, params: {attraction_id: @attraction.id, user_id: current_user.id } %>
    </div>
</div>

